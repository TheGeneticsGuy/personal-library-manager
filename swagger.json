    "/books/": {
      "get": {
        "tags": [
          "Books"
        ],
        "summary": "Get all books for the user",
        "description": "Retrieves a list of all books for the current user.",
        "responses": {
          "default": {
            "description": ""
          }
        }
      },
      "post": {
        "tags": [
          "Books"
        ],
        "summary": "Create a new book",
        "description": "Adds a new book to the user\\'s collection.",
        "responses": {
          "201": {
            "description": "Book created successfully."
          },
          "400": {
            "description": "Invalid input."
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookUpdate"
              }
            }
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "tags": [
          "Books"
        ],
        "summary": "Get a Specific Book by ID",
        "description": "Retrieve a book from the entire collection by the specific book ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Added book's details."
          },
          "400": {
            "description": "Invalid ID format."
          },
          "404": {
            "description": "Book not found."
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      },
      "put": {
        "tags": [
          "Books"
        ],
        "summary": "Update a Book by ID",
        "description": "Update 1 or all properties of a specific book, by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Book ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Book updated successfully."
          },
          "400": {
            "description": "Invalid input or ID format."
          },
          "404": {
            "description": "Book not found."
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookUpdate"
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Books"
        ],
        "summary": "Delete a Book by ID",
        "description": "Delete a specific book, by ID, from the entire book collection",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Book deleted successfully."
          },
          "400": {
            "description": "Invalid ID format."
          },
          "404": {
            "description": "Book not found."
          }
        }
      }
    }
